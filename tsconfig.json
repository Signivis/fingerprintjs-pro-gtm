{
  "compilerOptions": {
    "outDir": "dist/src",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  },
  "files": ["src/index.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
